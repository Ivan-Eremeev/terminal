extends blocks/base.pug

block title 
	title Данные о компании

block style-libs
	link(rel="stylesheet", href="css/libs/jquery.formstyler.css")
	link(rel="stylesheet", href="css/libs/jquery.formstyler.theme.css")
	link(rel="stylesheet", href="css/libs/jquery.jscrollpane.css")
